<% layout('layouts/boilerplate.ejs') -%>

    <div class="logo">
        <h1>HOME</h1>
    </div>

    <div class="allPosts">
        <% for(let post of posts){ %>
            <div class="post">
                <div class="title"><h3><%= post.title %></h3></div>
                <div class="description"><p><%= post.description %></p></div>
                <div class="link">
                    <a class="viewLink" href="/posts/<%=post._id%>">View</a>
                </div>
            </div>
        <% } %>
    </div>